.product_item {
  display: flex;
  padding: 10px;
}
.product_img {
  width: 100px;
  height: 100px;
  border-radius: 4px;
}
.product_info {
  flex: 1;
  border-bottom: 1px solid #f0f2f3;
  margin-left: 10px;
}
.product_name {
  color: #333333;
  font-size: 14px;
  height:38px;
  overflow:hidden;
  word-break:break-all;
}
.product_price {
  font-size: 18px;
  color: #e93b3d;
  margin-top: 30px;
  font-weight: bold;
}
.price_flag {
  font-size: 14px;
}
.prompt {
  margin-top:50%;
  text-align:center;
  color:#aaa;
}