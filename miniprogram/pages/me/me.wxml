<block wx:if='{{logined}}'>  
  <view class="header">
    <image src='../../images/user.png' class='avatar'></image>
    <view class='username'>您好，{{name}}</view>
  </view>
  <view class='content'>
    <view class='item' bindtap='toMyOrder'>我的订单</view>
    <view class='item' bindtap='toMyCollect'>我的收藏</view>
    <view class='item' bindtap='toMyInfo'>我的个人信息</view>
    <view class='item' bindtap='toAbout'>关于</view>
  </view>
  <view class='footer' class='logout-btn' bindtap='logout'>退出登录</view>
</block>
<span bindtap='login' class='login-btn' wx:else>注册/登陆</span>