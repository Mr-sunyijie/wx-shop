page {
  padding-top: 30px;
}
.my-scroll-view-right {
  width: 70vw;
  display: inline-block;
  position: absolute;
}
.my-scroll-view-left {
  height: 100vh;
  width: 30vw;
  display: inline-block;
}
.box {
  background-color: #f4f5f6;
  padding: 15px 15px;
  text-align: center;
  font-size: 14px;
}

.selected {
  background-color: #ffffff;
  font-weight: bold;
  font-size: 14px;
  border-left: 5px solid #d81e06;
}
.brand_img {
  width: 50px;
  height: 50px;
  margin: 0 auto;
  display: block;
}
.brand_item {
  display: inline-block;
  width: 33%;
  margin-top: 25px;
}
.brand_name {
  font-size: 11px;
  text-align: center;
  color: #333333;
}