.search_area {
  display: flex;
  justify-content: space-between;
  margin: 20px 20px;
}
.search_box {
  background-color: #f4f5f6;
  border-radius: 30px;
  display: flex;
  padding: 4px 15px;
  flex: 1;
}

.seach_input {
  height: 25px;
  font-size: 14px;
}

.search_img {
  width: 25px;
  height: 25px;
  margin-right: 6px;
}

.search_btn {
  padding-left: 20px;
  line-height: 34px;
  color: #aaabac;
  font-size: 17px;
}
.history {
  margin: 10px 20px;
}
.history_header {
  display: flex;
  justify-content: space-between;
}
.history_header .title, .hot .title {
  font-size:13px;
  line-height:20px;
  font-weight:bold;
}
.shanchu_img {
  width: 20px;
  height: 20px;
}
.history_content, .hot_content {
  display: flex;
  margin-top: 20px;
}
.history_content .item, .hot_content .item{
  font-size: 14px;
  color: #9a9b9c;
  background-color: #f4f5f6;
  margin-right: 10px;
  padding: 5px 20px;
  border-radius: 15px;
}
.hot {
  margin: 30px 20px;
}
.product_item {
  display: flex;
  padding: 10px;
}
.product_img {
  width: 100px;
  height: 100px;
  border-radius: 4px;
}
.product_info {
  flex: 1;
  border-bottom: 1px solid #f0f2f3;
  margin-left: 10px;
}
.product_name {
  color: #333333;
  font-size: 14px;
  height:38px;
  overflow:hidden;
  word-break:break-all;
}
.product_price {
  font-size: 18px;
  color: #e93b3d;
  margin-top: 30px;
  font-weight: bold;
}
.price_flag {
  font-size: 14px;
}
.prompt {
  margin-top:50%;
  text-align:center;
  color:#aaa;
}
